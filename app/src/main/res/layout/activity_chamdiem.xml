<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_formchamdiem"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="#F5F5F5"
    tools:ignore="InvalidId">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Tiêu đề -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Phiếu điểm rèn luyện"
            android:textSize="18sp"
            android:textColor="#FFFFFF"
            android:background="#D32F2F"
            android:padding="16dp"
            android:gravity="center" />


        <!-- Mục 4.5 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="16dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="4.5. Được biểu dương khen thưởng trong các hoạt động liên quan đến ý thức công dân trong cộng đồng"
                android:textSize="16sp" />

            <Spinner
                android:id="@+id/spinner1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minWidth="48dp"
                android:minHeight="48dp"
                android:entries="@array/ratings_array" />
        </LinearLayout>

        <!-- Mục 4.6 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="8dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="4.6. Về phẩm an ninh, trật tự xã hội; an toàn giao thông (có giấy báo hoặc có xác nhận của huynh)"
                android:textSize="16sp" />

            <Spinner
                android:id="@+id/spinner2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minWidth="48dp"
                android:minHeight="48dp"
                android:entries="@array/ratings_array" />
        </LinearLayout>

        <!-- Tiêu đề cho mục 5 -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tiêu chí 5. Đánh giá về ý thức và kết quả tham gia phụ trách lớp, các đoàn thể trong nhà trường, thành tích đặc biệt trong học tập và rèn luyện"
            android:textSize="16sp"
            android:textStyle="bold"
            android:paddingTop="16dp" />

        <!-- Các mục từ 5.1 đến 5.3 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="8dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="5.1. Sinh viên là cán bộ lớp (Lớp trưởng, Lớp phó; Phó bí thư chi đoàn, BCH hội sinh viên, chi hội trưởng hội sinh viên)"
                android:textSize="16sp" />

            <EditText
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:inputType="number"
                android:gravity="center"
                android:hint="Nhập điểm" />

        </LinearLayout>

        <!-- Mục 5.2 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="8dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="5.2. Thành viên tham gia các Câu lạc bộ, đội nhóm"
                android:textSize="16sp" />

            <EditText
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:inputType="number"
                android:gravity="center"
                android:hint="Nhập điểm" />
        </LinearLayout>

        <!-- Mục 5.3 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="8dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="5.3. Sinh viên đạt thành tích đặc biệt trong học tập và rèn luyện"
                android:textSize="16sp" />

            <EditText
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:inputType="number"
                android:gravity="center"
                android:hint="Nhập điểm"
                android:padding="8dp" />

        </LinearLayout>

        <!-- Nút Gửi -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:paddingTop="16dp">

            <Button
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Lưu Gửi sau"
                android:backgroundTint="#D3D3D3"
                tools:ignore="ButtonStyle" />

            <Button
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Gửi phiếu"
                android:backgroundTint="#FF0000" />
        </LinearLayout>




    </LinearLayout>
</ScrollView>
